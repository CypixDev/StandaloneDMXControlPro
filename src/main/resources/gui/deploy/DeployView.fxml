<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.net.URL?>
<HBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../MainStyle.css" xmlns="http://javafx.com/javafx/19"
      fx:controller="de.standaloendmx.standalonedmxcontrolpro.gui.deploy.DeployViewController">
    <children>
        <VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBox" prefWidth="270.0" spacing="5.0"
              style="-fx-background-color: -fx-color;" styleClass="main-vbox" xmlns="http://javafx.com/javafx/19">
            <children>
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: -fx-color;" VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false">
                            <graphic>
                                <FontIcon iconLiteral="anto-plus" iconSize="18"/>
                            </graphic>
                        </Button>
                        <Label text="Devices"/>
                        <Button fx:id="btnRefresh" mnemonicParsing="false">
                            <graphic>
                                <FontIcon iconLiteral="anto-reload" iconSize="18"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <TreeView fx:id="treeView" prefWidth="264.0" style="-fx-background-color: -fx-color;"
                          VBox.vgrow="ALWAYS"/>
            </children>
            <stylesheets>
                <URL value="@../MainStyle.css"/>
                <URL value="@style.css"/>
            </stylesheets>
        </VBox>
    </children>
</HBox>
