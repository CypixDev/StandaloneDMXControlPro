<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane stylesheets="@../MainStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.standaloendmx.standalonedmxcontrolpro.gui.bottombar.BottomBarViewController">
    <HBox style="-fx-background-color: -fx-color;" stylesheets="@../MainStyle.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <VBox spacing="5.0" style="-fx-background-color: -fx-color;" stylesheets="@../MainStyle.css">
                <children>
                    <Button fx:id="btnSlider" mnemonicParsing="false">
                        <graphic>
                            <FontIcon iconLiteral="anto-sliders" iconSize="48" />
                        </graphic>
                    </Button>
                    <Button fx:id="btnPallet" mnemonicParsing="false">
                        <graphic>
                            <FontIcon iconLiteral="bi-palette" iconSize="48" />
                        </graphic>
                    </Button>
                    <Button fx:id="btnEffect" mnemonicParsing="false">
                        <graphic>
                            <FontIcon iconLiteral="bi-lightning-fill" iconSize="48" />
                        </graphic>
                    </Button>
                </children>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="5.0" />
                </padding>
            </VBox>
         <AnchorPane fx:id="content" HBox.hgrow="ALWAYS" />
        </children>
    </HBox>

</AnchorPane>
