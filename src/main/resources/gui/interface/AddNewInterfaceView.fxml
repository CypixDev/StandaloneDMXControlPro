<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<VBox prefWidth="600.0" spacing="20.0" style="-fx-background-color: -fx-color;" stylesheets="@../MainStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.interface.AddNewInterface">
   <children>
      <Label text="Add new device">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
         <graphic>
            <FontIcon iconColor="#6b6b6b" iconLiteral="anto-deployment-unit">
               <font>
                  <Font size="30.0" />
               </font>
            </FontIcon>
         </graphic>
      </Label>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <ComboBox promptText="Available com" style="-fx-background-color: -fx-color;">
               <HBox.margin>
                  <Insets right="80.0" />
               </HBox.margin>
            </ComboBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <VBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Name:" />
                  <TextField />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Goup: " />
                  <ComboBox promptText="group" style="-fx-background-color: -fx-color;" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox>
         <children>
            <Label fx:id="deviceId" text="Device id: XXXX-XXXXX-XXXXX" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" spacing="80.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" text="Save">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
